{
  "name": "hjulverkstan-web",
  "version": "0.1.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "node dev",
    "debug": "node --inspect-brk dev",
    "build:ssr": "vite build --ssr src/server.tsx --outDir dist/ssr",
    "build:static": "vite build --outDir dist/static && node render",
    "build": "npm run build:ssr && npm run build:static",
    "serve": "npm run build && cd dist/static && npx serve",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx,md}\"",
    "lint:fix": "eslint --fix \"**/*.{js,jsx,ts,tsx,md}\"",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md}\"",
    "postinstall": "git config core.hooksPath .hooks"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react-router-dom": "^6.22.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.20",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "express": "^4.18.2",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-classnames": "^0.6.1",
    "prettier-plugin-merge": "^0.6.0",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "serve-static": "^1.15.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{html,css,less,ejs}": [
      "prettier --write"
    ]
  }
}
